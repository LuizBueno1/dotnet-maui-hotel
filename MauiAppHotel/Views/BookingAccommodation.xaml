<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.BookingAccommodation"
             Title="BookingAccommodation"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="Center"
                         Padding="10">
        <Label 
            Text="Daily Rate Calculation"
            FontFamily="BebasNeue"
            FontSize="46"
            HorizontalOptions="Center"
            TextColor="{StaticResource Primary}"/>

        <Frame Padding="10">
            <VerticalStackLayout Spacing="10">
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0" Text="Adults:"/>
                    <Label Grid.Row="0" Grid.Column="1" TextColor="{StaticResource Primary}"
                            Text="{Binding Value}" BindingContext="{x:Reference stp_adults}"/>
                    <Stepper Grid.Row="0" Grid.Column="2" x:Name="stp_adults"
                             Minimum="0" Maximum="10" Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Kids:"/>
                    <Label Grid.Row="1" Grid.Column="1" TextColor="{StaticResource Primary}"
                           Text="{Binding Value}" BindingContext="{x:Reference stp_kids}"/>
                    <Stepper Grid.Row="1" Grid.Column="2" x:Name="stp_kids"
                             Minimum="0" Maximum="10" Increment="1"/>

                </Grid>

                <Label Text="Choose your Suite" />

                <Picker x:Name="pck_room" Title="Select your Accommodation"
                        ItemDisplayBinding="{Binding Description}"/>

                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Stay Period"/>

                        <HorizontalStackLayout Spacing="20">
                            <Label Text="Check-in" VerticalOptions="Center"/>
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="20">
                            <Label Text="Check-out" VerticalOptions="Center"/>
                            <DatePicker x:Name="dtpck_checkout" Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <Button Text="Continue" Clicked="Button_Clicked"/>

            </VerticalStackLayout>
        </Frame>
        <Button 
        x:Name="btn_about"
        Text="About"
        FontSize="12"
        WidthRequest="80"
        HeightRequest="40"
        CornerRadius="8"
        Opacity="0.7"
        HorizontalOptions="End"
        VerticalOptions="End"
        Margin="10"
        Clicked="Btn_About_Clicked"
        BackgroundColor="{StaticResource Gray300}"
        TextColor="{StaticResource Primary}"/>
    </VerticalStackLayout>

</ContentPage>