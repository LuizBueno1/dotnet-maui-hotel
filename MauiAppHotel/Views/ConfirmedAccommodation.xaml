<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ConfirmedAccommodation"
             Title="ConfirmedAccommodation"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout VerticalOptions="Center">

        <Label Text="Super Luxury Suite" TextColor="{StaticResource Primary}"
               FontFamily="KalamRegular"
               FontSize="48"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adults: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="Kids: "/>
                    <Label Text="1" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Stay Period"/>

                <Label Grid.Row="1" Grid.Column="0" Text="27/05/2025"/>
                <Label Grid.Row="1" Grid.Column="1" Text="30/05/2025"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>

            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total:"></Label>
                <Label Text="R$ 750,00"></Label>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Back" Clicked="Button_Clicked" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>