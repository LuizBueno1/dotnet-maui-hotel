<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ConfirmedAccommodation"
             Title="ConfirmedAccommodation"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout VerticalOptions="Center">

        <Label Text="{Binding SelectedRoom.Description}" TextColor="{StaticResource Primary}"
               FontFamily="KalamRegular"
               FontSize="48"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adults: "/>
                    <Label Text="{Binding AdultCount}" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="Kids: "/>
                    <Label Text="{Binding ChildrenCount}" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Stay Period"/>

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding CheckInDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="{StaticResource Primary}"/>
                <Label Grid.Row="1" Grid.Column="1"
                       Text="{Binding CheckOutDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="{StaticResource Primary}"/>
                <Label Grid.Row="1" Grid.Column="2"
                       Text="{Binding StayDuration}"
                       TextColor="{StaticResource Primary}"/>

            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Total Value:"></Label>
                <Label Text="{Binding TotalValue, StringFormat='{}{0:c}'}"
                       TextColor="{StaticResource Primary}"></Label>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Back" Clicked="Button_Clicked" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>